<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConcessionFillActivity"
    tools:ignore="contentDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/toplogo"
        android:layout_marginTop="20dp"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sndtlogo"
        android:transitionName="logoTrans"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/passint"/>

    <Spinner
        android:id="@+id/passint_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/dest"/>

    <EditText
        android:id="@+id/dest_edittext"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:enabled="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/source"/>

    <EditText
        android:inputType="text"
        android:id="@+id/source_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/startDate_textview"
            android:shadowColor="@color/extremeTransparent"
            android:elevation="4dp"
            android:paddingTop="10dp"
            android:height="40dp"
            android:textAlignment="center"
            android:background="@color/not_too_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prestartdate"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/endDate_textview"
            android:shadowColor="@color/extremeTransparent"
            android:elevation="4dp"
            android:paddingTop="10dp"
            android:height="40dp"
            android:textAlignment="center"
            android:background="@color/not_too_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preenddate"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/conDate_textview"
            android:shadowColor="@color/extremeTransparent"
            android:elevation="4dp"
            android:paddingTop="10dp"
            android:height="40dp"
            android:textAlignment="center"
            android:background="@color/not_too_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/condate"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

    <Button
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:text="@string/next"
        android:background="@drawable/rect_btn"
        android:textColor="@color/not_too_white"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>